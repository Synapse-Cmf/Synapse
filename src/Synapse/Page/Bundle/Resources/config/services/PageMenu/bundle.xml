<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <!-- PageMenuItem type -->
        <service id="synapse.page.page_menu_item_form" class="Synapse\Page\Bundle\Form\PageMenu\PageMenuItemType">
            <tag name="form.type" />
            <argument type="service" id="synapse.page.loader" />
        </service>

        <service id="synapse.page.page_menu_view_builder" class="Synapse\Page\Bundle\ViewBuilder\PageMenuViewBuilder">
            <argument type="service" id="synapse.page.loader" />
            <argument type="service" id="router" />
        </service>

        <service id="synapse.page.twig.page_menuextension" class="Synapse\Page\Bundle\Twig\PageMenuExtension" public="false">
            <tag name="twig.extension" />
        </service>

    </services>

</container>
